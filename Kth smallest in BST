/**
 * Definition for a binary tree node.
 * public class TreeNode {
 *     int val;
 *     TreeNode left;
 *     TreeNode right;
 *     TreeNode() {}
 *     TreeNode(int val) { this.val = val; }
 *     TreeNode(int val, TreeNode left, TreeNode right) {
 *         this.val = val;
 *         this.left = left;
 *         this.right = right;
 *     }
 * }
 */
class Solution {
    int result;
    int count;
    public int kthSmallest(TreeNode root, int k) {
        this.count = k;
        helper(root);
        return result;
    }
    
    public void helper(TreeNode root){
        if(root.left != null)
            helper(root.left);
        count--;
        if(count == 0){
            result = root.val;
            return;
        }
        if(root.right != null)
            helper(root.right);
    }
}
